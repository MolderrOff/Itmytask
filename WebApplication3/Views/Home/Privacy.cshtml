@model List<Itmytask.Domain.Entity.Work>



@{
    ViewData["Title"] = "Загрузить все заявки";
    Layout = "_Layout";
}
<h1>@ViewData["Title"]</h1>

<p>Я вставил в Privacy.cshtml Use this page to detail your site's privacy policy.</p>
<p><a asp-action="NewCreate">Добавить объект</a></p>
<p><a asp-action="Index">Вернуться на стартовую</a></p>

@{
    <table frame="void" rules="cols">
        <tr>
            <th width="100" height="15">
                Id
            </th>

            <th width="100" height="15">

                NameTask

            </th>

            <th width="150" height="15">

                TaskNumber

            </th>

            <th width="150" height="15">

                Description

            </th>
            <th width="150" height="15">

                Customer

            </th>
            <th width="150" height="15">

                AdressTask

            </th>
            <th width="100" height="15">

                Price

            </th>
            <th width="100" height="15">

                TypeWork

            </th>

        </tr>
    </table>
}
@{
    <style>

        table {
            border: 1px solid grey;
            border-collapse: collapse;
        }
    </style>

    <table frame="void" rules="cols">

        <tr>
            <td width="100" height="15">
                @Model[0].Id
            </td>
            <td width="100" height="15">
                @Model[0].NameTask
            <td width="150" height="15">
                    @Model[0].TaskNumber
            </td>
            <td width="150" height="15">
                @Model[0].Description
            </td>
            <td width="150" height="15">
                @Model[0].Customer
            </td>
            <td width="150" height="15">
                @Model[0].AdressTask
            </td>
            <td width="100" height="15">
                @Model[0].Price
            </td>
            <td width="100" height="15">
                @Model[0].TypeWork
            </td>
        </tr>


    </table>
}
@foreach (var work in Model)
{
    <style>

        table {
            border: 1px solid grey;
            border-collapse: collapse;
        }
    </style>

    <table frame="void" rules="cols">

        <tr>
            <td width="100" height="15">
                @work.Id
            </td>
            <td width="100" height="15">
                @work.NameTask
            </td>
            <td width="150" height="15">
                @work.TaskNumber
            </td>
            <td width="150" height="15">
                @work.Description
            </td>
            <td width="150" height="15">
                @work.Customer
            </td>
            <td width="150" height="15">
                @work.AdressTask
            </td>
            <td width="100" height="15">
                @work.Price
            </td>
            <td width="100" height="15">
                @work.TypeWork
            </td>



    </table>
}



